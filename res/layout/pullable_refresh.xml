<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_down_refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" >
        
        <TextView 
            android:id="@+id/pull_down_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/hint_pull_to_refresh"
            android:textSize="16sp" />
        <ImageView 
            android:contentDescription="@string/none"
            android:id="@+id/pull_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pull_down_state_text"
            android:layout_toStartOf="@id/pull_down_state_text"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/pullable_pull_down_arrow" />
        <ImageView 
            android:contentDescription="@string/none"
            android:id="@+id/pull_down_refreshing_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pull_down_state_text"
            android:layout_toStartOf="@id/pull_down_state_text"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/pullable_progress_bar"
            android:visibility="gone" />
        <ImageView 
            android:contentDescription="@string/none"
            android:id="@+id/pull_down_state_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pull_down_state_text"
            android:layout_toStartOf="@id/pull_down_state_text"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />
        
    </RelativeLayout>
    
</RelativeLayout>
