<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/item_chat_guestpic"
        android:contentDescription="@string/none"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />
     
    <ImageView 
        android:id="@+id/item_chat_hostpic"
        android:contentDescription="@string/none"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp" />
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/item_chat_hostpic"
        android:layout_toStartOf="@id/item_chat_hostpic"
        android:layout_toRightOf="@id/item_chat_guestpic"
        android:layout_toEndOf="@id/item_chat_guestpic"
        android:orientation="vertical" >
        <LinearLayout 
            android:id="@+id/item_chat_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
		        android:id="@+id/item_chat_content"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dp"
		        android:textIsSelectable="true"
		        android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/item_chat_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
		        android:id="@+id/item_chat_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="5dp"
		        android:textSize="12sp" />
        </LinearLayout>
	    
    </LinearLayout>
    
    <TextView 
        android:id="@+id/item_chat_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
	<TextView 
	    android:id="@+id/item_chat_sender_id"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="invisible"/>
	<TextView 
	    android:id="@+id/item_chat_recver_id"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="invisible"/>
		
</RelativeLayout>
