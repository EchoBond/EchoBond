<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/thoughts_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="10dp"
        android:background="@drawable/square_edittext"
        android:gravity="start|top"
        android:hint="@string/hint_thoughts_content"
        android:inputType="textMultiLine"
        android:singleLine="false" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView 
            android:id="@+id/view_hashtag"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
       	 	android:gravity="center_horizontal"
            android:contentDescription="@string/none"
            android:src="@drawable/hashtag_view" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
        	android:gravity="center_vertical"
            android:layout_toRightOf="@id/view_hashtag"
            android:layout_toEndOf="@id/view_hashtag"
            android:contentDescription="@string/none"
            android:text="@string/title_new_post_tag"
            android:textColor="#8cd19d"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/hint_tags_separate"
            android:textColor="#909090"
            android:textSize="15sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/tags_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="10dp"
        android:background="@drawable/square_edittext"
        android:gravity="start|top"
        android:hint="@string/hint_tags_content"
        android:inputType="textMultiLine"
        android:singleLine="false" />

</LinearLayout>
