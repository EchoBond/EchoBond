<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/thoughts_groups"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/thoughts_group_logoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/none"
            android:src="@drawable/thoughts_group_logoview" />
        <TextView 
            android:id="@+id/thoughts_group_logotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thoughts_group_logoview"
            android:layout_toEndOf="@id/thoughts_group_logoview" 
            android:padding="10dp"
            android:gravity="center_vertical"
            android:text="@string/title_new_post_grouptitle"
            android:textColor="#8980da"
            android:textStyle="bold"
            android:textSize="25sp" />
        <ImageView 
            android:id="@+id/thoughts_group_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" 
            android:padding="10dp"
            android:gravity="center_vertical"
            android:contentDescription="@string/none"
            android:src="@drawable/search_page_group_more"
            android:clickable="true" />
    </RelativeLayout>
    
    <com.echobond.widget.XListView 
	    android:id="@+id/list_group"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:layout_margin="8dp"
	    android:divider="@android:color/transparent"
	    android:choiceMode="singleChoice" />

</LinearLayout>
