<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    tools:context="${relativePackage}.${activityClass}" >
    
    <com.facebook.widget.LoginButton
        android:id="@+id/button_login_Fb"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        fb:login_text=""
        fb:logout_text=""/>
    
    <LinearLayout	
        android:id="@+id/email_buttons_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_login_Fb"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_signup_email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:contentDescription="@string/none"
            android:scaleType="fitCenter"
            android:src="@drawable/signup_email_button" />
        <ImageButton
            android:id="@+id/button_signin_email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:contentDescription="@string/none"
            android:scaleType="fitCenter"
            android:src="@drawable/signin_email_button" />
    </LinearLayout>
    
</RelativeLayout>
