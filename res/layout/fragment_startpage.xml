<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout	
        android:id="@+id/email_buttons_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/button_signup_email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:contentDescription="@string/none"
            android:scaleType="fitCenter"
            android:src="@drawable/signup_email_button" />

        <ImageButton
            android:id="@+id/button_signin_email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:contentDescription="@string/none"
            android:scaleType="fitCenter"
            android:src="@drawable/signin_email_button" />
    </LinearLayout>

    <com.facebook.widget.LoginButton
        android:id="@+id/button_login_Fb"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_above="@+id/email_buttons_group" />
    
</RelativeLayout>
