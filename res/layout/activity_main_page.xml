<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/mainPage"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    tools:context="${relativePackage}.${activityClass}" >
	
	    <android.support.v7.widget.Toolbar
	        xmlns:app="http://schemas.android.com/apk/res-auto" 
	        android:id="@+id/main_toolbar"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        app:contentInsetStart="0dp"
	        android:background="#fff" />
	    
	    <FrameLayout 
	        android:paddingTop="?android:attr/actionBarSize"
	        android:id="@+id/mainContent"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/main_toolbar" >
	    </FrameLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/main_bottom"
	        android:layout_width="match_parent"
	        android:layout_height="55dp"
	        android:layout_alignParentBottom="true"
	        android:orientation="vertical" >
	        <ImageView 
	            android:contentDescription="@string/none"
	            android:id="@+id/tabBtn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:scaleType="fitStart"
	            android:layout_gravity="bottom"
	            android:layout_alignParentBottom="true" 
	            android:src="@drawable/tab" />
	        <LinearLayout 
	            android:id="@+id/sss"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentLeft="true"
	            android:paddingBottom="2dp" >
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/homeBtn"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/home" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/hitBtn"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/hit" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/newTrendBtn"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/new_trending" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/likeMindedPplBtn"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/like_minded_people" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/profileBtn"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/profile" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/addBtn"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/add" />
	        </LinearLayout>
	        
	    </RelativeLayout>   
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/main_toolbar"
	        android:layout_above="@id/main_bottom"
	        android:orientation="vertical" >
	        <android.support.v4.view.ViewPager 
	            android:id="@+id/tabpager"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" />
	    </LinearLayout>
	
	</RelativeLayout>

	<ListView 
        android:id="@+id/setting_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp" />
    
</android.support.v4.widget.DrawerLayout>
	