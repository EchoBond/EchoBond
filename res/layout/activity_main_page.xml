<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    tools:context="${relativePackage}.${activityClass}" >
	
	    <android.support.v7.widget.Toolbar
	        xmlns:app="http://schemas.android.com/apk/res-auto" 
	        android:id="@+id/toolbar_main"
	        android:layout_width="match_parent"
	        android:layout_height="55dp"
	        app:contentInsetStart="0dp"
	        android:background="#fff" />
	    
	    <FrameLayout 
	        android:paddingTop="?android:attr/actionBarSize"
	        android:id="@+id/main_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/toolbar_main" >
	    </FrameLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/main_bottom"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:layout_alignParentBottom="true"
	        android:orientation="vertical" >
	        <!--  <ImageView 
	            android:contentDescription="@string/none"
	            android:id="@+id/tab_button"
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:paddingTop="2dp"
	            android:paddingBottom="2dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:src="@drawable/tab"
	            android:scaleType="fitXY"
	            android:layout_gravity="bottom"
	            android:layout_alignParentBottom="true" />  -->
	        <LinearLayout 
	            android:id="@+id/buttons_group"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentLeft="true"
	            android:padding="5dp" >
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/home_button"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/main_home_button" />
	            <!--  <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/hit_button"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/main_hit_button" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/trend_button"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/main_trending_button" />  -->
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/like_minded_button"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/main_like_minded_button" />
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/notification_button"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1" 
	                android:src="@drawable/main_hit_button" />
	                <!--  android:src="@drawable/main_notification_button"  -->
	            <ImageView 
	                android:contentDescription="@string/none"
	                android:id="@+id/profile_button"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:clickable="true"
	                android:layout_weight="1"
	                android:src="@drawable/main_profile_button" />
	        </LinearLayout>
	        
	    </RelativeLayout>   
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/toolbar_main"
	        android:layout_above="@id/main_bottom"
	        android:orientation="vertical" >
	        <android.support.v4.view.ViewPager 
	            android:id="@+id/tabpager"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center" />
	    </LinearLayout>
	
	</RelativeLayout>

	<ListView 
        android:id="@+id/setting_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp" />
    
</android.support.v4.widget.DrawerLayout>
	