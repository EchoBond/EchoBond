<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:contentDescription="@string/none"
        android:id="@+id/message1"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intro3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp" />
    <LinearLayout 
        android:id="@+id/charactersGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView 
            android:contentDescription="@string/none"
            android:id="@+id/character1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/character1" />
        <ImageView 
            android:contentDescription="@string/none"
            android:id="@+id/character2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/character2" />
        <ImageView 
            android:contentDescription="@string/none"
            android:id="@+id/character3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/character3" />
    </LinearLayout>
    <ImageView 
        android:contentDescription="@string/none"
        android:id="@+id/message2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/intro1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" />
    
</RelativeLayout>
