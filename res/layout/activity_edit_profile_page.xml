			        android:minHeight="30dp"
			        android:maxLines="4" />
			</RelativeLayout>
			
			<RelativeLayout 
			    android:id="@+id/edit_profile_todo"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="7dp" >
