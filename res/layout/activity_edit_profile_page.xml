<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
    <android.support.v7.widget.Toolbar 
        xmlns:app="http://schemas.android.com/apk/res-auto" 
        android:id="@+id/toolbar_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:background="#fff" />
    
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:paddingBottom="20dp" >
	    	
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:text="@string/edit_profile_basic"
	            android:textSize="25sp"
	            android:textStyle="bold"
	            android:textColor="#31cdbb" />
	        
			<RelativeLayout 
			    android:id="@+id/edit_profile_earth"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:padding="7dp" >
			    <ImageView 
			        android:contentDescription="@string/none"
			        android:id="@+id/edit_profile_earth_view"
			        android:layout_width="30dp"
			        android:layout_height="30dp"
			        android:src="@drawable/profile_about_earth" />
			    <EditText 
			        android:id="@+id/edit_profile_earth_text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/edit_profile_earth_view"
			        android:layout_toEndOf="@id/edit_profile_earth_view"
			        android:layout_marginLeft="10dp"
			        android:layout_marginStart="10dp"
			        android:layout_marginRight="3dp"
			        android:layout_marginEnd="3dp"
			        android:padding="5dp"
			        android:inputType="textMultiLine"
			        android:background="@drawable/square_edittext_lightgrey"
			        android:minHeight="30dp"
			        android:maxLines="4" />
			</RelativeLayout>
			
			<TextView 
			    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:text="@string/edit_profile_more"
	            android:textSize="25sp"
	            android:textStyle="bold"
	            android:textColor="#31cdbb" />
