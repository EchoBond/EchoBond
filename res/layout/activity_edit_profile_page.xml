			        android:layout_width="30dp"
			        android:layout_height="30dp"
			        android:src="@drawable/profile_about_dna" />
			    <EditText 
			        android:id="@+id/edit_profile_dna_text"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/edit_profile_dna_view"
			        android:layout_toEndOf="@id/edit_profile_dna_view"
			        android:layout_marginLeft="10dp"
			        android:layout_marginStart="10dp"
			        android:layout_marginRight="3dp"
			        android:layout_marginEnd="3dp"
			        android:padding="5dp"
			        android:inputType="textMultiLine"
			        android:background="@drawable/square_edittext_lightgrey"
			        android:minHeight="30dp"
			        android:maxLines="4" />
			</RelativeLayout>
			
			<RelativeLayout 
			    android:id="@+id/edit_profile_trophy"
